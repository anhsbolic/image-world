<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.profile.ProfileFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/profileTxtUsername"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <TextView
            android:id="@+id/profileTxtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorTextDefault"
            app:layout_constraintTop_toTopOf="@id/profileImg"
            app:layout_constraintBottom_toTopOf="@id/profileTxtBio"
            app:layout_constraintLeft_toRightOf="@id/profileImg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/profileTxtBio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorTextGray"
            app:layout_constraintTop_toBottomOf="@id/profileTxtUsername"
            app:layout_constraintBottom_toTopOf="@id/profileTopLineMenu"
            app:layout_constraintLeft_toLeftOf="@id/profileTxtUsername"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"/>

        <View
            android:id="@+id/profileTopLineMenu"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLineSeparator"
            app:layout_constraintTop_toBottomOf="@id/profileTxtBio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/profileMenuGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_menu_grid_off"
            tools:ignore="ContentDescription"
            app:layout_constraintTop_toBottomOf="@id/profileTopLineMenu"
            app:layout_constraintBottom_toTopOf="@id/profileBottomLineMenu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/profileMenuList"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/profileMenuList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_menu_list_off"
            tools:ignore="ContentDescription"
            app:layout_constraintTop_toTopOf="@id/profileMenuGrid"
            app:layout_constraintBottom_toBottomOf="@id/profileMenuGrid"
            app:layout_constraintLeft_toRightOf="@id/profileMenuGrid"
            app:layout_constraintRight_toLeftOf="@id/profileMenuFilter"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/profileMenuFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_menu_filter_off"
            tools:ignore="ContentDescription"
            app:layout_constraintTop_toTopOf="@id/profileMenuGrid"
            app:layout_constraintBottom_toBottomOf="@id/profileMenuGrid"
            app:layout_constraintLeft_toRightOf="@id/profileMenuList"
            app:layout_constraintRight_toLeftOf="@id/profileMenuSearch"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/profileMenuSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_menu_search_off"
            tools:ignore="ContentDescription"
            app:layout_constraintTop_toTopOf="@id/profileMenuGrid"
            app:layout_constraintBottom_toBottomOf="@id/profileMenuGrid"
            app:layout_constraintLeft_toRightOf="@id/profileMenuFilter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:id="@+id/profileBottomLineMenu"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLineSeparator"
            app:layout_constraintTop_toBottomOf="@id/profileMenuGrid"
            app:layout_constraintBottom_toTopOf="@id/profileRvPost"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="10dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/profileRvPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/profileBottomLineMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.5"/>


    </android.support.constraint.ConstraintLayout>



</android.support.v4.widget.NestedScrollView>