<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/postToolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@android:color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/postImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/postImgProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/postBtnOption"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/more_options_gray"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_alignParentEnd="true"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/postTxtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDefault"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/postImgProfile"
                android:layout_toStartOf="@id/postBtnOption"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/postImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        tools:ignore="ContentDescription"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintTop_toBottomOf="@id/postToolbar"
        app:layout_constraintBottom_toTopOf="@id/postTxtSeenByTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/postTxtSeenByTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_seen_by_title"
        android:maxLines="2"
        android:textSize="14sp"
        android:textColor="@color/colorTextDefault"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/postImg"
        app:layout_constraintBottom_toTopOf="@id/postTxtPost"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/postTxtSeenBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="14sp"
        android:textColor="@color/colorTextDefault"
        app:layout_constraintTop_toTopOf="@id/postTxtSeenByTitle"
        app:layout_constraintBottom_toBottomOf="@id/postTxtSeenByTitle"
        app:layout_constraintLeft_toRightOf="@id/postTxtSeenByTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/postTxtPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorTextDefault"
        app:layout_constraintTop_toBottomOf="@id/postTxtSeenByTitle"
        app:layout_constraintBottom_toTopOf="@id/postTxtSeeComments"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/postTxtSeeComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorTextSoftGray"
        app:layout_constraintTop_toBottomOf="@id/postTxtPost"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"/>

</android.support.constraint.ConstraintLayout>